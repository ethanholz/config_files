{
	"languageserver":{
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
	}
	}
}
